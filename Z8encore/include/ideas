struct TGame
{
	int size;
	struct TLevel;
	char color;
	int highscore;	
	
	initGame();
	updateGame();
	drawGame();
}

struct gameSize
{
	int size;
	(
	int x;
	int y;
	)
}

struct TLevel
{
	struct TBall;
	int score;
	struct TBrick[];
	struct TMovingBrick[];
	struct TBouncer;
	struct TBoss boss;
	struct TPowerUP powerUp[];
	
	initLevel();
	updateLevel();
	drawLevel();
	
	removeBrick();

}

struct TBall
{
	struct TVector position;
	struct TVector momentum;
	long velocity;
	long angle;
	char skin;
	
	initBall();
	updateBall();
	moveBall();
	drawBall();
}

struct TBouncer
{
	struct TVector position;
	char length;
	char skin;
	
	initBouncer();
	updateBouncer();
	moveBouncer();
	drawBouncer();
}

struct TBrick
{
	struct TVector position;
	struct TVector size;
	char health;
	char dropChance;
	
	initBrick();
	hasCollidedWithBall();
	damageBrick();
	isAlive();
	drawBrick();
}

struct TMovingBrick
{
	struct TVector position;
	struct TVector size;
	char health;
	struct TVector motion;
	char dropChance;
	
	initMovingBrick();
	hadCollidedWithBall();
	updateMovingBrick();
	damageMovingBrick();
	isAlive();
	drawMovingBrick();
}

struct TBoss
{
	struct TVector position;
	struct TVector size;
	struct TBall shoots[];
	char health;
	char color;
	char points;
	
	initBoss();
	updateBoss();
	shootBall();
	damageBoss();
	isAlive();
	drawBoss();
}

struct TPowerUp
{
	char powerupType;
	struct TVector position;
	struct TVector motion;
	
	initPowerUp();
	applyPowerUpToBouncer();
	updatePowerUp();
	drawPowerUp();
}
